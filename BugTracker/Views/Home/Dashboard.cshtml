}


<head>
    <link rel="stylesheet" href="css/layout.css">
</head>
<body class="sb-nav-fixed">
    <partial name="Navbar"/>
    <div id="layoutSidenav">
        <partial name="SideNavbar"/>
        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid px-4">
                    <h1 class="mt-4">Dashboard</h1>
